<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="disconnectionPane" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.PSP45.gui.disconnectionController">
	<children>
		<ImageView fitHeight="720.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="true">
			<image>
				<Image url="@../graphicResources/SantoriniBoard.png" />
			</image>
		</ImageView>
		<Label layoutX="318.0" layoutY="214.0" text="The other player is offline" textFill="#0d0000">
			<font>
				<Font name="Cooper Black" size="48.0" />
			</font>
		</Label>
		<HBox layoutX="318.0" layoutY="397.0" prefHeight="100.0" prefWidth="535.0">
			<children>
				<Button fx:id="newGameButton" mnemonicParsing="false" onMouseClicked="#newGameClicked" text="NEW GAME" textFill="#751653">
					<font>
						<Font name="Cooper Black" size="24.0" />
					</font>
					<HBox.margin>
						<Insets left="100.0" />
					</HBox.margin>
				</Button>
				<Button fx:id="exitButton" mnemonicParsing="false" onMouseClicked="#exitClicked" text="EXIT" textFill="#751653">
					<font>
						<Font name="Cooper Black" size="24.0" />
					</font>
					<HBox.margin>
						<Insets left="120.0" />
					</HBox.margin>
				</Button>
			</children>
		</HBox>
	</children>
</AnchorPane>
